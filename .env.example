# Mist API Configuration
# Copy this file to .env and update with your actual values

# Required: Your Mist API token
# Get this from: https://manage.mist.com/admin/?org_id=:org_id#!token
MIST_API_TOKEN=your_api_token_here

# Required: Your Mist organization ID
# Get this from the Mist dashboard URL or API
MIST_ORG_ID=your_organization_id_here

# Optional: Mist API base URL (default shown)
MIST_BASE_URL=https://api.mist.com/api/v1

# Optional: Request timeout in seconds (default: 30)
MIST_TIMEOUT=30

# Optional: Maximum number of retry attempts (default: 3)
MIST_MAX_RETRIES=3

# Optional: Backoff factor for retry delays (default: 1.0)
MIST_BACKOFF_FACTOR=1.0

# Optional: Rate limit threshold for warnings (default: 10)
MIST_RATE_LIMIT_THRESHOLD=10

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mist_automation.log

# Database configuration (for future use)
DATABASE_URL=sqlite:///data/network_automation.db

# Alert configuration (for future use)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
